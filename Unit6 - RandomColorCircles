'''
Yamuna Rao
7/5
using a for loop create random sized and  random colored circles to fill your Trinket page
'''

import random
import turtle

for i in range(1000):
  r = random.randint(0, 255)
  g = random.randint(0, 255)
  b = random.randint(0, 255)
  size = random.randint(1, 50)
  xcor = random.randint(-250, 250)
  ycor = random.randint(-250, 250)
  turtle.penup()
  turtle.goto(xcor, ycor)
  turtle.pendown()
  turtle.color(r, g, b)
  turtle.begin_fill()
  turtle.speed(0)
  turtle.circle(size)
  turtle.end_fill()
  
